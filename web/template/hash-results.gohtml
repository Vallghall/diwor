<!doctype html>
<html lang="en">
    <head>
        {{template "base-head"}}
        <title>Hash|Results</title>
        <link rel="stylesheet" href="/css/results.css">
    </head>
    <body>
    <div id="current-user-panel">
        <a class="img-wrapper" href="/api/profile">
            <img src="/image/van.jpg" alt="profile logo" width="50" height="50">
        </a>
        <strong>{{.Name}}</strong> <br>
        <a id="logout" href="/auth/logout" style="font-size: 12pt">Выйти</a>
    </div>

        <div id="return-wrapper">
            <button id="return-button" type="button" onclick="window.location.href='/api/experiment/hashes'">К выбору алгоритмов</button>
        </div>

        <img class="altera" src="/image/altera.gif" alt="flex">

        <div id="table-wrapper">
        {{range $vals := .Results.Results}}
            <div class="result-wrapper">
            <table class="table">
                    <tr class="row">
                        <th>Параметры</th>
                        <th>Результаты</th>
                    </tr>

                    <tr class="row">
                        <td>Алгоритм</td>
                        <td class="algorithm">{{$vals.Algorithm}}</td>
                    </tr>

                    <tr>
                        <td>Продолжительность</td>
                        <td class="duration">{{$vals.Duration}}</td>
                    </tr>

                    <tr>
                        <td>Размер</td>
                        <td class="size">{{$vals.Size}}</td>
                    </tr>

                    <tr>
                        <td>Размер блока</td>
                        <td class="block-size">{{$vals.BlockSize}}</td>
                    </tr>

                    <tr class="row">
                        <td>Пример хеша</td>
                        <td class="sample">{{$vals.Sample}}</td>
                    </tr>
            </table>
            </div>
        {{end}}
        </div>
    </body>
</html>

